{
  "name": "@epicurrents/pyodide-service",
  "version": "0.1.0",
  "description": "Epicurrents Pyodide service",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./components": "./dist/components/index.js",
    "./types": "./dist/types/index.d.ts"
  },
  "imports": {
    "#*": "./dist/*"
  },
  "files": [
    "dist/*",
    "umd/*.js",
    "umd/*.LICENSE.txt",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "build": "npm run build:umd && npm run build:tsc && npm run copy:scripts",
    "build:docs": "npx typedoc",
    "build:tsc": "node node_modules/typescript/bin/tsc && node node_modules/tsconfig-replace-paths/dist/commonjs --project tsconfig.json",
    "build:umd": "node node_modules/webpack/bin/webpack.js --progress --stats-error-details --config webpack.config.js",
    "copy:scripts": "node copy-scripts.js",
    "dev": "node node_modules/webpack/bin/webpack.js serve --progress --config webpack.dev.js",
    "lint": "npm run lint:src",
    "lint:src": "node node_modules/eslint/bin/eslint src",
    "prepack": "npm run build",
    "release": "npm publish --access=public",
    "serve": "node node_modules/webpack/bin/webpack.js serve --progress --config webpack.dev.js",
    "update:core": "cd node_modules/@epicurrents/core && git pull && npm i && npm run build:tsc"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/epicurrents/pyodide-service.git"
  },
  "author": "Sampsa Lohi",
  "license": "Apache-2.0",
  "dependencies": {
    "@epicurrents/core": "^0.3.0-1",
    "asymmetric-io-mutex": "^0.9.0",
    "pyodide": "0.25.0",
    "scoped-event-log": "^2.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.18.2",
    "@microsoft/tsdoc": "^0.14.1",
    "@typescript-eslint/eslint-plugin": "^6.7.2",
    "@typescript-eslint/parser": "^6.7.2",
    "babel-loader": "^8.2.5",
    "circular-dependency-plugin": "^5.2.2",
    "dotenv": "^16.3.1",
    "eslint": "^8.49.0",
    "ts-loader": "^9.3.0",
    "tsconfig-replace-paths": "^0.0.14",
    "typedoc": "^0.27.4",
    "typedoc-plugin-missing-exports": "^3.1.0",
    "typescript": "5.6",
    "webpack": "^5.73.0",
    "webpack-bundle-analyzer": "^4.5.0",
    "webpack-cli": "^4.9.2",
    "webpack-dev-server": "^4.9.2",
    "webpack-merge": "^5.8.0"
  }
}
